.row
  .col-md-12
    p#notice
      = notice
    h1
      | Urls Shortener
    p.text-right
      = link_to 'Create New Shorten Url', new_url_path, class: 'btn btn-primary'
    table.table.table-hover
      thead
        tr
          th
            | Origin url
          th
            | Shorten url
          th
            | Hit Count
          th
      tbody
        - @urls.each do |url|
          tr
            td
              = url.origin_url
            td
              = url.shorten_url
            td
              = url.count
            td
              = link_to 'Try it now!', url, class: 'btn btn-primary'
